<h1>Cart</h1>
<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Count</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button 
                                class="btn btn-small js-remove"
                                data-id="{{id}}"
                                data-csrf="{{@root.csrf}}"
                            >
                                Remove
                                </button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Make an order</button>
        </form>
    {{else}}
        <p>Cart is empty</p>
    {{/if}}
</div>
